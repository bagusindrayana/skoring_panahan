<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tile_background_pressed" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tile_background_selected" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tile_background_activated" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:drawable="@color/tile_background_normal" /> </selector>